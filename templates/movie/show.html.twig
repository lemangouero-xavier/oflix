{% extends 'base.html.twig' %}

{% block title %}
oflix - titre
{% endblock %}

{% block body %}
<!-- main -->

    <div class="container bg-lighttt pt-5">

        <div class="row mb-2">

            <div class="col">

                <div
                    class="row g-0 borderrr rrrounded overflow-hidden flex-md-row align-items-start mb-4 shadow-smmm position-relative">
                    <div class="col-4 movie__poster img-thumbnail"
                        style="background-image: url({{ movie.poster }});">
                        <img src="{{ asset('assets/images/poster-placeholder.png') }}" class="img-fluid">
                        <!-- img src="https://m.media-amazon.com/images/M/MV5BNThmZGY4NzgtMTM4OC00NzNkLWEwNmEtMjdhMGY5YTc1NDE4XkEyXkFqcGdeQXVyMTQxNzMzNDI@._V1_SX300.jpg" class="img-fluid" -->
                    </div>

                    <div class="col-8 p-4 d-flex flex-column position-static bg-light">
                        <a href="" class="movie__favorite fs-1 my-2 mx-3 link-danger"><i class="bi bi-bookmark-plus"></i></a>
                        <strong class="d-inline-block mb-2 text-primary">{{ movie.type }}</strong>
                        <h3 class="mb-1">{{ movie.title }}</h3>
                        <div class="mb-1 text-muted">{{movie.duration}} min</div>
                        <p>
                        {% for genre in movie.genres %}
                            <span class="badge bg-warning text-dark">{{ genre.name }}</span>
                        {% endfor %}
                        </p>
                        <p>{{ movie.synopsis }}
                        </p>
                        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Distinctio dignissimos recusandae
                            hic reprehenderit. Ipsum, laborum nostrum temporibus aperiam itaque perferendis neque hic
                            libero natus! Cupiditate iste hic nemo ea pariatur?
                        </p>
                        
                        <div class="d-flex mb-4" style="color: orange;">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-half"></i>
                            <span class="ps-1">{{ movie.rating }}</span>
                        </div>

                        <h2>3 Saisons</h2>
                        <ul class="list-unstyled">
                            {% for season in movie.seasons %}
                            <li><span class="badge bg-danger fs-6 mb-2">Saison {{ season.number}}</span><small class="ms-1"> ({{ season.episodeNumber }} épisodes)</small></li>
                            {% endfor %}
                        </ul>

                        <dl class="row">
                            <dt class="col-sm-12">Avec</dt>
                            {#version en utilisant les casting et le lazi sans le tri #}
                            <dd class="col-sm-12">
                                {% for casting in movie.castings %}
                                    {{ casting.actor.firstname }} {{ casting.actor.lastname }} ({{ casting.role }})<br>
                                {% else %}
                                    <em>pas d'acteurs</em>
                                {% endfor %}
                            </dd>
                            {#version en utilisant les casting recupéré a la main  et le lazi avec le tri #}
                            <dt class="col-sm-12">Avec(le controller movieController)</dt>
                            <dd class="col-sm-12">
                                {% for casting in castingFilterByMovie %}
                                    {{ casting.actor.firstname }} {{ casting.actor.lastname }} ({{ casting.role }})<br>
                                {% else %}
                                    <em>pas d'acteurs</em>
                                {% endfor %}
                            </dd>
                            <dt class="col-sm-12">Pays</dt>
                            <dd class="col-sm-12">USA</dd>
                            <dt class="col-sm-12">Année</dt>
                            <dd class="col-sm-12">{{ movie.releaseDate|date("d/m/Y") }}</dd>
                            {#celle ci ne fonctionne pas: <dd class="col-sm-12">{{ movie.releaseDate }}</dd>#}
                        </dl>
                    </div>
                </div>

            </div>

        </div>

    </div>

{% endblock %}
