{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Movie index</h1>
        {# read and display just one flash message type #}
        {% for message in app.flashes('notice') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
        {% endfor %}
        {# read and display just one flash message type #}
        {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
        {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Release_date</th>
                <th>Duration</th>
                <th>Type</th>
                <th>Synopsis</th>
                <th>Summary</th>
                <th>Rating</th>
                <th>Poster</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
                <td>{{ movie.duration }}</td>
                <td>{{ movie.type }}</td>
                <td>{{ movie.synopsis }}</td>
                <td>{{ movie.summary }}</td>
                <td>{{ movie.rating }}</td>
                <td>{{ movie.poster }}</td>
                <td>
                    <a href="{{ path('app_back_movie_show', {'id': movie.id}) }}" class="btn btn-warning mb-1">show</a>
                    <a href="{{ path('app_back_movie_edit', {'id': movie.id}) }}" class="btn btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_movie_new') }}">Create new</a>
{% endblock %}
