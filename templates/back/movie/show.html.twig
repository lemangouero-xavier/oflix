{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
<div class:"container">
    <div class="w-75 p-3 mx-auto mt-5" style="background-color: #eee;">
    <a href="{{ path('app_back_movie_index') }}" class="btn btn-info">back to list</a>
    <h1>Movie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Release_date</th>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ movie.duration }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ movie.type }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ movie.summary }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ movie.rating }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ movie.poster }}</td>
            </tr>
        </tbody>
    </table>

    
    <div class="d-flex justify-content-center">
    <a href="{{ path('app_back_movie_edit', {'id': movie.id}) }}" class="btn btn-primary me-2">edit</a>

    {{ include('back/movie/_delete_form.html.twig') }}
    </div>
    </div>
    </div>
{% endblock %}
